@model VeterinariaApp.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="page-header">
    <h2>📝 Crear Nuevo Producto</h2>
    <a href="/Producto" class="btn btn-secondary">← Volver al Catálogo</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

<div class="form-container">
    <form asp-action="Crear" method="post" class="producto-form">
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Nombre">Nombre del Producto *</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej: Alimento Premium Perro Adulto" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Categoria">Categoría *</label>
                <select asp-for="Categoria" class="form-control">
                    <option value="">Seleccionar categoría</option>
                    <option value="Alimento">🍖 Alimento</option>
                    <option value="Juguetes">🎾 Juguetes</option>
                    <option value="Higiene">🧴 Higiene y Cuidado</option>
                    <option value="Medicamentos">💊 Medicamentos</option>
                    <option value="Accesorios">🎀 Accesorios</option>
                    <option value="Camas y Casas">🏠 Camas y Casas</option>
                    <option value="Transporte">🚗 Transporte</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Descripcion">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" 
                      placeholder="Describe las características del producto..."></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Precio">Precio ($) *</label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" 
                       min="0.01" max="10000" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Stock">Stock Inicial *</label>
                <input asp-for="Stock" type="number" class="form-control" min="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Marca">Marca</label>
            <input asp-for="Marca" class="form-control" placeholder="Ej: Royal Canin, Pedigree, etc." />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                📦 Crear Producto
            </button>
            <a href="/Producto" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/producto-form.js"></script>
}